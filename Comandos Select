Drop table empregados07 cascade constraints;

CREATE TABLE EMPREGADO07 
  ( CODEMP NUMBER(05),
    NOME  VARCHAR2(50),
    DATA_ADM  DATE,
    SALARIO   NUMBER(7,2),
    COMISSAO  CHAR(01),
        CONSTRAINT EMP_CODEMP_PK
        PRIMARY KEY(CODEMP));
    
DESC EMPREGADO07;

